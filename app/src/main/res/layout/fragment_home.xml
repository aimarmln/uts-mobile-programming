<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pnj.uts.ti.aimar_uts_mobile_programming.HomeFragment">


    <!-- Judul -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textSize="70dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Paragraf Teks -->
    <TextView
        android:id="@+id/tv_paragraph1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ini adalah aplikasi pendataan alumni PNJ, aplikasi ini juga merupakan UTS dari mata kuliah Mobile Programming"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_paragraph2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini memiliki tujuan untuk Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae dolorum ab, repellat vitae eveniet labore delectus. Amet nam quidem corrupti perferendis vero ipsum repudiandae, labore a. Debitis pariatur excepturi architecto."
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/tv_paragraph1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
